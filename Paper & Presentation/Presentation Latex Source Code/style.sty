%                   PAGE LAYOUT
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setlength{\parindent}{0pt}
\setlength{\parskip}{0.5em}
\setbeamerfont{footnote}{size=\tiny}
% Make margins thin
\setbeamersize{text margin left=1.0em}  
\setbeamersize{text margin right=2.0em} 

\apptocmd{\frame}{}{\justifying}{} % Texts in frame is justified

% This is a hack to make itemize follow justify by redefining right alignment 
\renewcommand{\raggedright}{\justifying}  

% Use circles for items
\setbeamertemplate{itemize item}[circle]


\newcommand\myheading[1]{%
  \par\smallskip
  {\large#1}\par\smallskip}

